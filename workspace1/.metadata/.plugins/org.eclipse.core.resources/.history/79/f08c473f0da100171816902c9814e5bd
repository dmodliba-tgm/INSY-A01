package jdbcdemo;

import java.sql.*;

public class Driver {

	public static void main(String[] args) {
			
		try {
			Connection myConn = DriverManager.getConnection("jdbc:mysql://localhost:3306/flightdata", "root", "Butz");
			
			Statement myStmt = myConn.createStatement();
			
			ResultSet myRs = myStmt.executeQuery("select * from airlines");
			
			while(myRs.next()) {
				System.out.println(myRs.getString("id") + ", " + myRs.getString("name"));
			}
		}
		catch(Exception exc) {
			exc.printStackTrace();
		}
	}
	
}
